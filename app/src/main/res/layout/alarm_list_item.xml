<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="19dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:background="@drawable/card_state"


    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="13:02"
        android:id="@+id/alarm_list_date"
        android:textColor="@color/alarm_list_color"
        android:textSize="@dimen/alarm_time_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/alarm_name_size"
        android:textColor="@color/alarm_list_color"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Å kola"
        android:id="@+id/alarm_list_name"
        android:layout_below="@+id/alarm_list_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarm_list_remaining"
        android:textColor="@color/alarm_list_color"
        android:text="Za 32 minut"
        android:textSize="@dimen/alarm_remaining_size"
        android:layout_alignTop="@+id/alarm_list_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <android.support.v7.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarm_list_switch"
        android:focusable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/alarm_list_date" />

</RelativeLayout>