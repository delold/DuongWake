<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:duong="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/wake_bg"
    android:gravity="center"
    tools:context="cz.duong.duongwake.activities.WakeActivity">

    <TextView android:text="@string/wake_label"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@color/wake_text"
        android:textSize="@dimen/wake_text_size"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <cz.duong.duongwake.ui.AlarmButtonView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        duong:backgroundColor="@color/accent"
        duong:helperColor="@color/accent_dark"
        duong:circleColor="@color/wake_text"
        duong:circleSize="@dimen/circle_size"
        duong:textSize="@dimen/circle_text_size"
        duong:textCircle="@string/wake_shutdown"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView"
        android:id="@+id/alarm_wake_snooze" />

</RelativeLayout>
